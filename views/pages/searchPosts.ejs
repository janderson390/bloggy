<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs'); %>
<body>
	<h1 class='title'>Bloggy</h1>

	<div class="wrapper">
		<%- include('../partials/testAuth.ejs'); %>
		<%- include('../partials/nav.ejs'); %>


		<div class="outerRecentPosts">
			<h1 class="h1">Searched Posts - By <%= filterType %></h1>

			<div class="innerRecentPosts">

			<% if (posts == null || posts.length == 0) { %>
				<div> No posts found. </div>
			<% } else { %>
				<% posts.forEach(function(r) { %>
				<div class="postWrapper">
					<div class="postTitle"> <%= r.title %> </div>
					<p class="postBody"> <%= r.body %> </p>
					<br>
				</div>
				<% }); %>
			<% } %>
			
			</div>
		</div>

		<div class="footer">
			<%- include('../partials/footerNav.ejs'); %>
		</div>
	</div>

	<script src="/js/utils.js"></script>
	<script>
		function setOriginalSearch() {
			document.querySelector("#searchBox").value = '<%= origSearch %>';
			document.querySelector("#filters").value = '<%= origFilter %>';
		}

		window.onload = setOriginalSearch;
	</script>
</body>
</html>